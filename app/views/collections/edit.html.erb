<div class="well well-lg">
    <h2>Editing Collection #<%= @collection.id %><span class="text-muted pull-right"><a href="/new_collection">Add a New Collection</a></span></h2>
</div>

<div class="container">
  <form action="/collections/<%= @collection.id %>/update">
    <div class="col-md-6">
      <label for="site_name">Website Name:</label><br />
      <input id="site_name" name="site_name" value="<%= @collection.site_name  %>" type="text" style="border-radius:13px;"/>
    </div>
    <div class="col-md-6">
      <label for="site_url">Website URL:</label><br />
      <input id="site_url" name="site_url" value="<%= @collection.site_url  %>" type="text" style="border-radius:13px;"/>
    </div>
    <div class="col-md-6">
      <label for="description">Short Description:</label><br />
      <input id="description" name="description" value="<%= @collection.description  %>" type="text" style="border-radius:13px;"/>
    </div>
    <div class="col-md-6">
      <label for="c_name">Category:</label><br />
      <input id="c_name" name="c_name" value="<%= @collection.c_name  %>" type="text" style="border-radius:13px;"/>
    </div>
    <div class="col-md-6">
      <input type="submit" style="border-radius:3px;">
    </div>
  </form>
</div>


