<h1>Editing Website #<%= @website.id %></h1>

<form action="/websites/<%= @website.id %>/update">
  <div>
    <label for="site_url">Website URL:</label><br />
    <input id="site_url" name="site_url" value="<%= @website.site_url  %>" type="text" />
  </div>
  <div>
    <label for="site_name">Website Name:</label><br />
    <input id="site_name" name="site_name" value="<%= @website.site_name  %>" type="text" />
  </div>
  <div>
    <input type="submit">
  </div>
</form>

<div class="well well-lg">
  <h2>Editing Website Collection #<%= @website.id %><span class="text-muted pull-right"><a href="/new_website">Add a New Website </a></span></h2>
  </div>

<div class="container">
<form action="/website/<%= @website.id %>/update">
